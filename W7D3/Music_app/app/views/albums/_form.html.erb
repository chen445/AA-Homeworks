<% if type == :new%>
    <%action_url = albums_url%>
    <%button_text = "Create Album"%>
<%elsif type = :edit%>
    <%action_url = album_url(album)%>
    <%button_text ="Update Album"%>
<%end%>

<form  action = <%=action_url%> method = "Post">
    <%=auth_token%>
    <%if type== :edit%>
        <input type = "hidden" name="_method" value = "patch">
    <%end%>

    <label for = name>Name
    <input type= "text" name = album[name] id="album.name" value=<%=album.name%>>
    </label>

    <label for="album_band">Band </label>
    <select name="album[band_id]" id ="album_band">
        <%Band.each do |band|%>
            <option value="<%=band.id%>"<%="selected" if album.band_id == band.id%>>
            </option>
        <%end%>
    </select>

    <label for= "album_live">Live</label>
        <input type = "raido" name=album[live] id="album.live">
        <%="checked" if album.live%>
    <label for="album_live1">Studio</label>  
        <input type = "raido" name=album[live] id="album.live">
        <%="checked" if !album.live%>

    <label for ="album_year"> Year</label>
    <input id="album-year" type="number" name=album[year] value="<%album.year%>">
    
    <input type="submit" value=<%=button_text%>>
</form>